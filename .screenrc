escape ^Jj

hardstatus alwayslastline "[%02c] %`%-w%{=b bw}%n %t%{-}%+w"

autodetach on
startup_message off
defscrollback 10000000

# log
logfile "$HOME/log/screenlog/%H-%Y%m%d-%c-%n.log"
deflog on
logtstamp on
logtstamp after 600
# deflog flush secs

# display hardcopy
hardcopydir "$HOME/log/hardcopy"
hardcopy_append on

defencoding utf-8
